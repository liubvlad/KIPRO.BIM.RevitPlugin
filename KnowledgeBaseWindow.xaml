<Window x:Class="KIPRO.BIM.RevitPlugin.KnowledgeBaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Knowledge Base" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <DockPanel>
            <ListBox x:Name="FilesListBox" DockPanel.Dock="Left" Width="200" 
                     SelectionChanged="FilesListBox_SelectionChanged">
            </ListBox>
            <TextBox x:Name="ContentTextBox" DockPanel.Dock="Right" Margin="5" 
                     IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </DockPanel>
    </Grid>
</Window>
